<div class="sidebar">
    <% var first = true
        for(var i in theme.menu) { %>
            <% if (first) { %>
    <ul class="main-menu">
        <li class="main-menu-item"><a href="<%- url_for(theme.menu[i]) %>"><%= i %></a></li>
        <% first = false %>
            <% } else { %>
        <li class="main-menu-item"><a href="<%- url_for(theme.menu[i]) %>"><%= i %></a></li>
            <% } %>
        <% } %>
    </ul>
</div>
